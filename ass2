#include <stdio.h>
void main()
{
int i, n, sum = 0,*a;
	printf("Enter the size of array \n");
	scanf("%d", &n);
  printf("Enter Elements of the List \n");
	for (i = 0; i < n; i++) 
        {
		scanf("%d", a + i);
	}
  for (i = 0; i < n; i++)
        {
		sum = sum + *(a + i); 
               	}
 printf("Sum of all elements in array = %d\n", sum);
        return 0;
}
