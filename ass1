# include<stdio.h>
int main()
{
int  a,b;
int *ptr1,*ptr2;	
 int add,sub,mult;
float div;   
printf("Enter a,b values:\n");
scanf("%d%d",&a,&b);
ptr1=&a;
ptr2=&b;    
add=(*ptr1) + (*ptr2);
sub=(*ptr1) - (*ptr2);
mult=(*ptr1) * (*ptr2);
div=(*ptr1) / (*ptr2);
 printf("add= %d\n",add);
printf("subtraction= %d\n",sub);
printf("Multiplication= %d\n",mult);
 printf("Division= %f\n",div);
 return 0;
}
